<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/proxy_host_hint">
        
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProxyHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="84"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/proxy_port_hint">
        
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProxyPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/proxy_username_hint">
        
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProxyUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="50"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/proxy_password_hint">
        
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProxyPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="50"
            android:inputType="textVisiblePassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    
</LinearLayout>

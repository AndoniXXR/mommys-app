<?xml version="1.0" encoding="utf-8"?>
<!-- activity_pool.xml - Layout for PoolActivity like the original app -->
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <com.google.android.material.appbar.AppBarLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorSurface"
        app:elevation="0dp"
        app:layout_insetEdge="top">
        
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetLeft="2dp"
            app:contentInsetStart="2dp"
            app:layout_scrollFlags="enterAlways|scroll"
            app:title="@string/pool_title"/>
            
    </com.google.android.material.appbar.AppBarLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lLText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        
        <!-- Pool title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pool_subtitle_loading"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"/>
        
        <!-- Status text -->
        <TextView
            android:id="@+id/txtTitleStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pool_subtitle_status_1"
            android:textAlignment="center"
            android:textSize="12sp"
            android:paddingBottom="8dp"/>
        
        <!-- Progress bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            style="?android:attr/progressBarStyleHorizontal"/>
        
        <!-- Posts grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"/>
            
    </LinearLayout>
    
    <!-- Bottom navigation for actions -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_gravity="bottom"
        android:id="@+id/bottom_nav"
        android:background="?attr/colorSurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        app:layout_insetEdge="bottom"
        app:menu="@menu/menu_pool_bottom"/>
        
</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<!-- Search suggestion layout exactly like the original app -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_suggestion_item_height"
    style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown">
    
    <ImageView
        android:id="@android:id/icon1"
        android:layout_width="@dimen/search_suggestion_icon_width"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_history"
        android:visibility="invisible" />
    
    <ImageView
        android:id="@+id/edit_query"
        android:layout_width="@dimen/search_suggestion_edit_icon_width"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="?selectableItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_back"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/icon2"
        android:layout_width="@dimen/search_suggestion_edit_icon_width"
        android:layout_height="@dimen/search_suggestion_edit_icon_width"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toStartOf="@id/edit_query"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_back"
        android:visibility="gone" />
    
    <TextView
        android:id="@android:id/text1"
        style="?android:dropDownItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@android:id/text2"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:text="TEXT1" />
    
    <TextView
        android:id="@android:id/text2"
        style="?android:dropDownItemStyle"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:alpha="0.7"
        android:gravity="top"
        android:maxLines="1"
        android:text="TEXT2"
        android:textAppearance="?textAppearanceSearchResultSubtitle"
        android:textSize="10sp"
        android:visibility="visible" />
        
</RelativeLayout>

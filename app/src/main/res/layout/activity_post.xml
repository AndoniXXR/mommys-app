<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?myPostBackgroundColor">

    <!-- Banner Ad Container (exactamente como la app original) -->
    <include
        layout="@layout/banner_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ViewPager2 para swipe horizontal entre posts (como la app original) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adContainer" />

    <!-- Botones Back flotantes (como la app original - posición configurable) -->
    <RelativeLayout
        android:id="@+id/backButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/adContainer">

        <!-- Botón back izquierdo -->
        <ImageView
            android:id="@+id/btnBackLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:alpha="0.4"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/post_back_button"
            android:elevation="5dp"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            android:visibility="visible" />

        <!-- Botón back derecho -->
        <ImageView
            android:id="@+id/btnBackRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:alpha="0.4"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/post_back_button"
            android:elevation="5dp"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            android:visibility="gone" />

    </RelativeLayout>

    <!-- Mini preview de la imagen al scrollear (como la app original) -->
    <ImageView
        android:id="@+id/imgMini"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="false"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Loading indicator -->
    <FrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
